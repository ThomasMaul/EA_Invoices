{
    "tableDataSource":  "ds.INVOICES.all().first().invoice_lines",
     "columns": [{
            "check": true, 
            "header": "Quantity",
            "source": "This.item.Quantity"
        },{
            "check": true, 
            "header": "Product Reference",
            "source": "This.item.ProductReference"
        }, {
            "check": true,
            "header": "Product Name",
            "source": "This.item.ProductName"
        }, {
            "check": true,
            "header": "Unit Price",
            "source": "String(This.item.ProductUnitPrice;\"###,###.00\")"
        }, {
            "check": true,
            "header": "Discount Rate",
            "source": "String(This.item.DiscountRate;\"###,###.00\")"
        }, {
            "check": true,
            "header": "Discount Value",
            "source": "String(This.item.DiscountRate*This.item.ProductUnitPrice*This.item.Quantity/100;\"###,###.00\")"
        }, {
            "check": true,
            "header": "VAT Rate",
            "source": "String(This.item.ProductTaxRate;\"###,###.00\")"
        }, {
            "check": true,
            "header": "Total",
            "source": "String(This.item.Total;\"###,###.00\")"
        }, {
            "check": true,
            "header": "Total Tax",
            "source": "String(This.item.TotalTax;\"###,###.00\")"
        }, {
            "check": true,
            "header": "Total with Tax",
            "source": "String(This.item.TotalWithTax;\"###,###.00\")"
        }
    ],
    "bcorFormulas": [
        {
            "label": "Subtotal of invoice items",
            "source": "String(This.previousItems.sum(\"Total\"); \"###,###.00\")"
        },
        {
            "label": "Subtotal of invoice items with tax",
            "source": "String(This.previousItems.sum(\"TotalWithTax\"); \"###,###.00\")"
        },
        {
            "label": "Subtotal of invoice items tax",
            "source": "String(This.previousItems.sum(\"TotalTax\"); \"###,###.00\")"
        }
    ],
    "extraFormulas": [{
            "label": "Sum of invoice items",
            "source": "String(This.tableData.sum(\"Total\"); \"###,###.00\")"
        }
        ,
        {
            "label": "Sum of invoice items with tax",
            "source": "String(This.tableData.sum(\"TotalWithTax\"); \"###,###.00\")"
        },
        {
            "label": "Sum of invoice items tax",
            "source": "String(This.tableData.sum(\"TotalTax\"); \"###,###.00\")"
        }
    ]
}